<?xml version="1.0" encoding="UTF-8"?>

<databaseChangeLog
  xmlns="http://www.liquibase.org/xml/ns/dbchangelog/1.7"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog/1.7
         http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-1.7.xsd">
 
   <changeSet id="1" author="andrii">
        <createTable tableName="block_ua">
            	<column name="id" type="int" autoIncrement="true">
                	<constraints primaryKey="true" nullable="false"/>
            	</column>
		<column name="place_id" type="int">
			<constraints unique="true" uniqueConstraintName="key_place_id" />
		</column>
            	<column name="short_description" type="varchar(255)" />
            	<column name="description" type="text" />
		<column name="creation_time" type="DATETIME" defaultValueDate="NOW()" />
		<column name="modified_time" type="DATETIME" defaultValueDate="NOW()" />
        </createTable>
	
	<createTable tableName="criteria">
		<column name="id" type="int" autoIncrement="true">
			<constrains primaryKey="true" nullable="false"/> 
		</column>
		<column name="name" type="varchar(255)" />
		<column name="description" type="text) />
		<column name="creation_time" type="DATETIME" defaultValueDate="NOW()" />
		<column name="modified_time" type=DATETIME" defaultValueDate="NOW()" />
	</createTable>

	<createTable tableName="criteria_place">
		<column name="id" type="int" autoIncrement="true">
			<constrains primaryKey="true" nullable="false" />
		</column>
	</createTable>
		
   </changeSet>

</databaseChangeLog>
